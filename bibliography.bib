@article{zhang2017,
  title = {{{SPRINT}}: An {{SNP-free}} Toolkit for Identifying {{RNA}} Editing Sites},
  shorttitle = {{{SPRINT}}},
  author = {Zhang, Feng and Lu, Yulan and Yan, Sijia and Xing, Qinghe and Tian, Weidong},
  year = {2017},
